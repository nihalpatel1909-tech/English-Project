        width: 100%;
        border: 2px solid #fff;
        position: relative;
    }
    .threat {
        position: absolute;
        border: 3px solid red;
        display: none;
        pointer-events: none;
    }
    #timer {
        font-size: 2em;
        margin: 10px 0;
    }
    button {
        padding: 10px 20px;
        font-size: 1em;
        margin-top: 10px;
        cursor: pointer;
    }
    #instruction {
        margin: 15px 0;
    }
