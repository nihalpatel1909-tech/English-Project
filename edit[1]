<body>
<h1>Action Mission: Target Identification</h1>
<div id="game-container">
    <h2 id="level-title">Mission Briefing</h2>
    <div id="instruction">
        Find the hidden threat in the scene before time runs out!
    </div>
    <div id="timer">Ready?</div>
    <div style="position: relative;">
        <img id="level-image" class="level-img" src="" alt="Level Image">
        <div id="threat-box" class="threat"></div>
    </div>
    <button id="start-btn">Start Mission</button>
</div>

<script>
// Level data
const levels = [
    {
        title: "Level 1 - Bar Scene (Easy)",
        img: "https://i.imgur.com/9P3X0yH.jpg",
        threat: {top: "35%", left: "60%", width: "40px", height: "40px"},
        time: 30
    },
    {
        title: "Level 2 - Subway Platform (Easy)",
        img: "https://i.imgur.com/2ZjzK4M.jpg",
        threat: {top: "50%", left: "30%", width: "40px", height: "40px"},
        time: 25
    },
    {
        title: "Level 3 - Market Scene (Medium)",
        img: "https://i.imgur.com/jfG6mL2.jpg",
        threat: {top: "40%", left: "70%", width: "40px", height: "40px"},
        time: 20
    },
    {
        title: "Level 4 - Crowded Street (Hard)",
        img: "https://i.imgur.com/FS2W8fX.jpg",
        threat: {top: "60%", left: "50%", width: "40px", height: "40px"},
        time: 15
    },
    {
        title: "Level 5 - Stadium Chaos (Extreme)",
        img: "https://i.imgur.com/Oz1w2Mw.jpg",
        threat: {top: "30%", left: "40%", width: "40px", height: "40px"},
        time: 10
    }
];

let currentLevel = 0;
let countdown;
const levelImage = document.getElementById("level-image");
const levelTitle = document.getElementById("level-title");
const startBtn = document.getElementById("start-btn");
const timerEl = document.getElementById("timer");
const threatBox = document.getElementById("threat-box");

function startLevel() {
    if (currentLevel >= levels.length) {
        levelTitle.textContent = "Mission Complete!";
        levelImage.style.display = "none";
        startBtn.style.display = "none";
        timerEl.textContent = "";
        return;
    }

    const level = levels[currentLevel];
    levelTitle.textContent = level.title;
    levelImage.src = level.img;
    threatBox.style.top = level.threat.top;
    threatBox.style.left = level.threat.left;
    threatBox.style.width = level.threat.width;
    threatBox.style.height = level.threat.height;
    threatBox.style.display = "none";
    let timeLeft = level.time;
    timerEl.textContent = `Time: ${timeLeft}s`;
    startBtn.style.display = "none";

    countdown = setInterval(() => {
        timeLeft--;
        timerEl.textContent = `Time: ${timeLeft}s`;
        if (timeLeft <= 0) {
            clearInterval(countdown);
            revealThreat();
        }
    }, 1000);
}

function revealThreat() {
    threatBox.style.display = "block";
    timerEl.textContent = "Threat revealed!";
    currentLevel++;
    startBtn.textContent = currentLevel < levels.length ? "Next Mission" : "Finish";
    startBtn.style.display = "inline-block";
}

startBtn.addEventListener("click", startLevel);
</script>
</body>
</html>


